<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SCADAServis.Controls.ganttSelectorUC"
	x:Name="UserControl"
	d:DesignWidth="205" d:DesignHeight="127" FontSize="10">

	<Grid x:Name="LayoutRoot" >
		<Border BorderBrush="#FFCCCCCC" BorderThickness="1,0,1,0">
		<Rectangle>
			<Rectangle.Fill>
				<SolidColorBrush Opacity=".22" Color="Silver"/>
			</Rectangle.Fill>
			</Rectangle>
			</Border>
		<TextBlock x:Name="lStart" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0">
			<TextBlock.Effect>
				<DropShadowEffect BlurRadius="22" ShadowDepth="0" Color="White"/>
			</TextBlock.Effect>Start</TextBlock>
		<TextBlock x:Name="lEnd" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
			<TextBlock.Effect>
				<DropShadowEffect BlurRadius="22" ShadowDepth="0" Color="White"/>
			</TextBlock.Effect>End</TextBlock>
	</Grid>
</UserControl>